<tr>  
  <td><%= tire.width %></td>
  <td><%= tire.sidewall %></td>
  <td><%= tire.diameter %></td>
  <td><%= tire.condition %> %</td>
  <td>
    <%= link_to "+", tire_path(tire, :id => tire.id, :op => 'inc'), 
    :class => 'big_sign round', :method => :put, :remote => true %>
    
    <span id="tire_<%= tire.id %>"><%= tire.quantity %></span>
    
    <%= link_to "-", tire_path(tire, :id => tire.id, :op => 'dec'), 
    :class => 'big_sign round', :method => :put, :remote => true %>
  </td>
  <td>$</td>

  <% unless tire.created_at.nil? %>
  <td>Updated <%= time_ago_in_words(tire.updated_at) %> ago.</td>
  <% end %>

  <% user = User.find(tire.user_id) %>
  <!--%= debug "#{current_user} - #{user} - #{@user}" %-->
  <% if current_user?(user) %>

  <!--td><%= link_to "delete", tire, :method => :delete, :confirm => "You sure?", :title => tire.diameter %></td-->

  <% end %>
</tr>
